{
  "name": "snowboard",
  "description": "API blueprint toolkit",
  "version": "4.1.21",
  "author": "Alif Rachmawadi <subosito@bukalapak.com>",
  "bin": {
    "snowboard": "./bin/run"
  },
  "dependencies": {
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1.17.0",
    "@oclif/plugin-help": "^3.2.2",
    "@oclif/plugin-not-found": "^1.2.4",
    "chalk": "^4.1.1",
    "core-js": "^3.12.1",
    "cors": "^2.8.5",
    "cosmiconfig": "^7.0.0",
    "express": "^4.17.1",
    "express-basic-auth": "^1.2.0",
    "globby": "^11.0.3",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "snowboard-helper": "^1.1.6",
    "snowboard-linter": "^1.0.7",
    "snowboard-mock-router": "^1.0.8",
    "snowboard-packer": "^1.3.13",
    "snowboard-parser": "^1.1.6",
    "snowboard-reader": "^1.0.6",
    "snowboard-theme-winter": "^1.3.15"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.26.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/oclif.manifest.json"
  ],
  "keywords": [
    "api-blueprint",
    "snowboard"
  ],
  "license": "MIT",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "snowboard",
    "repositoryPrefix": "<%- repo %>/blob/master/packages/<%- c.pluginName %>/src/commands/<%- c.id %>.js",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-not-found"
    ]
  },
  "repository": "bukalapak/snowboard",
  "scripts": {
    "build": "babel src --out-dir lib --root-mode upward",
    "manifest": "oclif-dev manifest",
    "pack-darwin": "oclif-dev pack --targets darwin-x64",
    "pack-linux": "oclif-dev pack --targets linux-x64",
    "readme": "oclif-dev readme",
    "test": "tape -r ../../babel.register.js 'test/**/*.js'",
    "prepack": "oclif-dev manifest"
  }
}
